<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signed-in</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <h1>Welcome back</h1>
    <form action="/signed-in?_method=POST" method ="POST">
        <button type="submit">Sign-out</button>
    </form>
    <div>
        <h1 class="mb-4">Places to Enjoy!</h1>

        <% places.forEach(place => { %>
        <div class="card mt-4">
            <div class="card-body">
            <h4 class="card-title"><%= place.name%></a></h4>
            <div class="card-subtitle text-muted mb-2">
                <%= place.uploader %>
            </div>
            <div class="card-text mb-2"><%= place.description %></div>
            <div class="card-text mb-2"><%= place.address %></div>
                <a href="/reviews" class="btn btn-success">Add a Review</a>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>